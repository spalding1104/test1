<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listening_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listening"
    android:weightSum="1">


    <Button
        android:id="@+id/btnPart1"
        android:background="@drawable/btn_part_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="@dimen/gap"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" />

    <Button
        android:id="@+id/btnPart2"
        android:background="@drawable/btn_part_2"
        android:layout_below="@+id/btnPart1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height"
        android:layout_marginBottom="@dimen/gap"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" />

    <Button
        android:id="@+id/btnPart3"
        android:background="@drawable/btn_part_3"
        android:layout_below="@+id/btnPart2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height"
        android:layout_marginBottom="@dimen/gap"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" />

    <Button
        android:id="@+id/btnPart4"
        android:background="@drawable/btn_part_4"
        android:layout_below="@+id/btnPart3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" />


</RelativeLayout>