<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txvGrade"
        android:text="Congratulations! You've just finished the test"
        android:textSize="26sp"
        android:textColor="@color/Black"
        android:fontFamily="casual"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp" />

    <TextView
        android:id="@+id/txvEvaluate"
        android:text="Evaluate"
        android:fontFamily="casual"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="@color/Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txvGrade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
         />

    <TextView
        android:id="@+id/txvScore"
        android:text="Score"
        android:fontFamily="casual"
        android:textSize="24sp"
        android:textColor="@color/Black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/txvEvaluate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnTry"
        android:text="Retry Test"
        android:textSize="24sp"
        android:fontFamily="casual"
        android:background="@color/Blueq"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txvScore"
        android:layout_marginTop="51dp" />

</RelativeLayout>